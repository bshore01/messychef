<div class="header">
  <div class="container">
    <!-- Header top area content -->
    <div class="row">
      <div class="col-md-4 col-sm-5">

        <!-- Link -->
        <%= link_to root_path do %>
          <div class="logo">
            <%= image_tag "chef-icon.jpg", class: "img-responsive" %>
            <!-- Heading -->
            <h1>MessyChef</h1>
          </div>
        <% end %>
      </div>

      <div class="col-md-8 col-sm-7">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-right" role="navigation">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <% if logged_in? %>                
                  <li><%= link_to "My Cookbook", user_cookbook_path(current_user, current_user.cookbooks.first) %></li>
                <% end %>

                <li><%= link_to "Recipes", recipes_path %></li>
                
                <li><%= link_to "About", about_index_path %></li>
              </ul>

              <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                  <li>
                    <%= link_to user_path(current_user) do %>
                      <img src="<%= current_user.image%>">
                    <% end %>
                  </li>
                  <li><%= link_to "Log Out", signout_path %></li>
                <% else %>
                  <li><%= link_to "Log in with Facebook", "auth/facebook" %></li>
                <% end %>
              </ul>  
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>
    </div>
  </div> <!-- / .container -->
</div>