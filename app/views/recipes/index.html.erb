<div class="main-content">
  <div class="pricing padd">
    <div class="container">
      <h3>Listing recipes</h3>
      <div class="row">
        <% @recipes.each do |recipe| %>
          <%= render 'recipe', recipe: recipe %>
        <% end %>
      </div>

      <hr>
      
      <div class="row">
        <%= link_to 'Add a new recipe!', new_recipe_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>