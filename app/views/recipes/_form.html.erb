<br><br>

<form action="/recipes" method="post" id="recipe_form" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <div class="row">
    <div class="col-md-4">
      Title: <input type="text" name="recipe[title]" value="" class="form-control">
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-6">
      Description: <textarea name="recipe[description]" rows=7 cols=50 value="" class="form-control col-md-4"></textarea>
    </div>
  </div>

  <hr>
  
  <div class="row">
    <div class="form-group col-md-8">
      Add ingredients:
      <table id="add_ingredients" class="table table-bordered">
       <tr >
         <th></th>
         <th style="text-align:center;">Name</th>
         <th style="text-align:center;">Amount</th>
         <th style="text-align:center;">Unit of Measurement (optional)</th>
       </tr>
      </table>    
      <button id="add_more_ingredients" class="btn btn-success">Add another ingredient</button>
    </div>
  </div>
  
  <hr>
  
  <div class="row">
    <div class="form-group col-md-8">
      Add directions: 
      <table id="add_directions" class="table table-bordered">
       <tr >
         <th></th>
         <th style="text-align:center;">Step #</th>
         <th style="text-align:center;">Details</th>
       </tr> 
      </table> 
      <button id="add_more_directions" class="btn btn-success">Add another direction</button>
    </div>
  </div>

  <hr>
  
  <input type="submit" value="Create recipe!" class="btn btn-danger">
</form>