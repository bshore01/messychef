<form action="/recipes" method="post" id="recipe_form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    
  Title: <input type="text" name="recipe[title]" value=""><br>
  Description: <textarea name="recipe[description]" rows=7 cols=50 value=""></textarea>

  <br>
  <br>
  <br>

  <div id="add_ingredients">
    <div class="add_ingredient">

      <button class="delete_this_ingredient">x</button>

      <select id="select_ingredient" data-placeholder="- Add an ingredient -">
        <option></option>
        <%= @ingredients_for_select.each do |i| %>
          <option value="<%= i.id %>"><%= i.name %></option>
        <% end %>
      </select>

      <input type="number">

      <select id="select_unit" data-placeholder="- Add unit of measurement -">
        <option></option>
        <%= @units_for_select.each do |u| %>
          <option value="<%= u.id %>"><%= u.unit %></option>
        <% end %>
      </select>

    </div>
  </div>

  <button id="add_more_ingredients">(+) Add ingredient</button>

  <br>
  <br>
  
  <div id="add_directions">
    Add directions:  
  </div>
  <button id="add_more_directions">(+) Add direction</button>

  <br><br>
  
  <input type="submit" value="Submit">

</form>