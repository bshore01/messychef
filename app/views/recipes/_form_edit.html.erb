<br><br>

<form action="/recipes/<%= @recipe.id %>" method="post" id="recipe_form" role="form">
  <input type="hidden" name="_method" value="PATCH">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <%= render 'recipes/fields/title', recipe: @recipe %>

  <hr>

  <%= render 'recipes/fields/description', recipe: @recipe %>  

  <hr>
  
  <%= render 'recipes/fields/ingredients', recipe: @recipe %>  
  
  <hr>
  
  <%= render 'recipes/fields/directions', recipe: @recipe %>  

  <hr>
  
  <input type="submit" value="Edit recipe" class="btn btn-danger">
</form>